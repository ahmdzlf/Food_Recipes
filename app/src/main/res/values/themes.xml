<resources xmlns:tools="http://schemas.android.com/tools">
<style name="Theme.Food_Recipes" parent="Theme.MaterialComponents.DayNight.NoActionBar">
    <!-- Warna utama -->
    <item name="colorPrimaryVariant">#4EB1B0</item>
    <item name="colorOnPrimary">#FFFFFF</item>
    <item name="colorPrimary">@color/deep_teal</item>
    <!-- Secondary brand color. -->
    <item name="colorSecondary">@color/teal_200</item>
    <item name="colorSecondaryVariant">@color/teal_700</item>
    <item name="colorOnSecondary">@color/black</item>

    <!-- Background -->
    <item name="android:windowBackground">@drawable/splash_screen</item>

    <!-- Gunakan light status bar biar tulisan di status bar tetap terlihat -->
    <item name="android:statusBarColor">@android:color/transparent</item>
    <item name="android:windowLightStatusBar">true</item>
</style>
</resources>
